# Aimux2 Production Environment Configuration
# Copy this file to .env and customize for your deployment

# Security Settings
AIMUX_REQUIRE_HTTPS=true
AIMUX_ENCRYPT_KEYS=true
AIMUX_AUDIT_LOGGING=true

# API Key Management
# Set your provider API keys here - they will be encrypted at rest
AIMUX_MINIMAX_API_KEY=your_minimax_api_key_here
AIMUX_ZAI_API_KEY=your_zai_api_key_here
AIMUX_CEREBRAS_API_KEY=your_cerebras_api_key_here
AIMUX_SYNTHETIC_API_KEY=your_synthetic_api_key_here

# TLS/SSL Configuration for WebUI
AIMUX_TLS_CERT=/etc/ssl/certs/aimux.crt
AIMUX_TLS_KEY=/etc/ssl/private/aimux.key
AIMUX_TLS_CA=/etc/ssl/certs/ca-certificates.crt

# Encryption Key (auto-generated if not set)
# AIMUX_ENCRYPTION_KEY=your_32_character_hex_key_here

# Endpoints
AIMUX_MINIMAX_ENDPOINT=https://api.minimax.io/anthropic
AIMUX_ZAI_ENDPOINT=https://api.z.ai
AIMUX_CEREBRAS_ENDPOINT=https://api.cerebras.ai
AIMUX_SYNTHETIC_ENDPOINT=https://synthetic.test

# WebUI Configuration
AIMUX_WEBUI_PORT=8080
AIMUX_WEBUI_SSL_PORT=8443
AIMUX_CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Service Configuration
AIMUX_DAEMON_USER=aimux
AIMUX_DAEMON_GROUP=aimux
AIMUX_WORKING_DIR=/var/lib/aimux
AIMUX_LOG_DIR=/var/log/aimux
AIMUX_PID_FILE=/var/run/aimux.pid
AIMUX_CONFIG_FILE=/etc/aimux/config.json

# Performance Tuning
AIMUX_MAX_CONCURRENT_REQUESTS=1000
AIMUX_REQUEST_TIMEOUT_MS=30000
AIMUX_CONNECTION_POOL_SIZE=100

# Monitoring & Logging
AIMUX_LOG_LEVEL=warn
AIMUX_STRUCTURED_LOGGING=true
AIMUX_METRICS_ENABLED=true
AIMUX_HEALTH_CHECK_ENABLED=true

# Rate Limiting
AIMUX_RATE_LIMIT_ENABLED=true
AIMUX_MAX_REQUESTS_PER_MINUTE=300
AIMUX_RATE_LIMIT_WINDOW=60

# Security Headers
AIMUX_HSTS_ENABLED=true
AIMUX_SESSION_COOKIE_SECURE=true
AIMUX_CSRF_PROTECTION=true

# Backup & Recovery
AIMUX_BACKUP_ENABLED=true
AIMUX_BACKUP_DIR=/var/backups/aimux
AIMUX_BACKUP_RETENTION_DAYS=30

# Development/Debug (set to false in production)
AIMUX_DEBUG=false
AIMUX_VERBOSE_LOGGING=false
AIMUX_PERFORMANCE_PROFILING=false